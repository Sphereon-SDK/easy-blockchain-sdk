<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sphereon.sdk</groupId>
    <artifactId>easy-blockchain-sdk-generator</artifactId>
    <packaging>jar</packaging>
    <version>0.10.2-SNAPSHOT</version>
    <name>Easy Blockchain API SDK Generator</name>

    <properties>
		<project-base-name>easy-blockchain-sdk</project-base-name>
        <company-name>Sphereon BV</company-name>
        <sdk-package>com.sphereon.sdk.blockchain.easy</sdk-package>
        <sdk-package-javascript>SphereonSDKBlockchainEasy</sdk-package-javascript>
        <sdk-package-csharp>Sphereon.SDK.Blockchain.Easy</sdk-package-csharp>
		<sdk-package-version>0.10.2</sdk-package-version>

        <swagger-coden-maven-plugin.version>2.2.3</swagger-coden-maven-plugin.version>
        <swagger-coden-verbose>false</swagger-coden-verbose>
		<project.encoding>UTF-8</project.encoding>

        <maven-release-plugin.version>2.5.3</maven-release-plugin.version>
        <maven-scm-provider-gitexe.version>1.9.5</maven-scm-provider-gitexe.version>
    </properties>

    <profiles>
        <profile>
            <id>html-docs</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.swagger</groupId>
                        <artifactId>swagger-codegen-maven-plugin</artifactId>
                        <version>${swagger-coden-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <inputSpec>swagger.sdk.json</inputSpec>
                                    <language>html2</language>
                                    <configOptions>
                                        <dateLibrary>java8</dateLibrary>
                                    </configOptions>
                                    <verbose>${swagger-coden-verbose}</verbose>
                                    <output>${project.basedir}/html-docs</output>
                                    <groupId>com.sphereon.sdk</groupId>
                                    <artifactId>${project-base-name}-html-docs</artifactId>
                                    <artifactVersion>${project.version}</artifactVersion>
                                    <addCompileSourceRoot>true</addCompileSourceRoot>
                                    <apiPackage>api</apiPackage>
                                    <modelPackage>model</modelPackage>
                                    <invokerPackage>${sdk-package}</invokerPackage>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>java8-okhttp-gson</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.swagger</groupId>
                        <artifactId>swagger-codegen-maven-plugin</artifactId>
                        <version>${swagger-coden-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <inputSpec>swagger.sdk.json</inputSpec>
                                    <language>java</language>
									<templateDirectory>
										${basedir}/src/main/mustacheTemplates/okhttp-gson
									</templateDirectory>
                                    <configOptions>
                                        <dateLibrary>java8</dateLibrary>
                                    </configOptions>
                                    <library>okhttp-gson</library>
                                    <verbose>${swagger-coden-verbose}</verbose>
                                    <output>${project.basedir}/java8-okhttp-gson</output>
                                    <groupId>com.sphereon.sdk</groupId>
                                    <artifactId>${project-base-name}-java8-okhttp-gson</artifactId>
                                    <artifactVersion>${project.version}</artifactVersion>
                                    <addCompileSourceRoot>true</addCompileSourceRoot>
                                    <apiPackage>${sdk-package}.api</apiPackage>
                                    <modelPackage>${sdk-package}.model</modelPackage>
                                    <invokerPackage>${sdk-package}.handler</invokerPackage>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

